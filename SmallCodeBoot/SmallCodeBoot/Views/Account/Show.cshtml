@model SmallCodeBoot.Models.User
@{
    ViewBag.Title = "个人信息";
}

<div class="row">

    <div class="col-md-3">

        @Html.Partial("Shared/_QuickMenu")

    </div>
    <div class="col-md-9 ">

        <ol class="breadcrumb">
            <li><a href="/">管理后台</a></li>
            <li><a href="/Profile/">个人中心</a></li>
            <li class="active">用户信息</li>
        </ol>


        <div class="container" style="width: 600px;">
            <form class="form-horizontal"> 
            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", style = "width: 280px", disabled = "" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Email, new { @class = "form-control", style = "width: 280px" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Role, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Role, new { @class = "form-control", style = "width: 280px" })
                </div>
            </div>
            </form>
        </div>
    </div>
</div>

