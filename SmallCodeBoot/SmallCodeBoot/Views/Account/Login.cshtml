@model SmallCodeBoot.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SmallCode - 用户登录</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row top-2">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", style = "max-width: 350px;padding: 15px; margin: 0 auto;" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <h2>用户登录</h2>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-lg", placeholder = "登录邮箱" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "登录密码" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.ValidationSummary(false)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">登录</button>
                    </div>
                </div>
            }

        </div>
    </div>
</body>
</html>
