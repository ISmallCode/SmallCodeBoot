<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SmallCodeBoot</title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/base.css" rel="stylesheet" />
    <link href="~/Content/pagination.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.css" rel="stylesheet" />

    <script src="~/scripts/jquery-1.8.3.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/jquery.pagination.js"></script>

    <script src="~/scripts/sweetalert.min.js"></script>
    <script src="~/scripts/base.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">管理后台</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li><a href="/UserManage">用户管理</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/Account/Show">@ViewBag.CurrentUser.Username </a>
                    </li>
                    <li><a href="/Account/LogOff">退出登录</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div style="min-height:650px;">
            @RenderBody()
        </div>
        <hr />
        <footer class="footer text-muted">
            <p>&copy; @DateTime.Now.Year SmallCodeBoot 版权所有</p>
        </footer>
    </div>

</body>
</html>